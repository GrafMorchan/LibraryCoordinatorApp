<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
		CanResize="False"
        x:Class="LibraryCoordinatorApp.AddNewAuthorDialogWindow"
        Title="Добавить нового автора">
	<StackPanel Margin="20">
		<TextBlock Margin="0 5" >Имя автора:</TextBlock>
		<TextBox  Watermark="Введите имя автора"/>
		<TextBlock Margin="0 5" >Фамилия автора:</TextBlock>
		<TextBox Watermark="Введите фамилию автора"/>
		<TextBlock Margin="0 15 0 5">Биография автора:</TextBlock>
		<TextBox Height="200" AcceptsReturn="True" TextWrapping="Wrap"/>
		<Button Margin="0 20">Добавить</Button>
	</StackPanel>
</Window>
